                <ab type="night">				
					<!--Codifica pagina 63-->
					<pb n="63" facs="pagina_63.jpeg" xml:id="pag63" type="full_page"/>
                    <date when="1943-12-11"><gap reason="omitted"/></date>
                
                    <!-- Pagina 63 -->
